/******************************************************************************

O(n)

*******************************************************************************/

#include <iostream>
#include<bits/stdc++.h>

using namespace std;
void binarysearch(int arr[],int n,int x){
    int l=0;
    int r=n-1;
    
    
    while(l<=r){
        cout<<"Dsd";
        int mid=(l+r)/2;
        cout<<arr[mid];
    if(arr[mid]==x){
        cout<<"element found at postion"<<arr[mid];
    }
    
    if(x>arr[mid]){
        l=mid+1;
    }
    else{
        r=mid-1;
    }
    
}

}


int main()
{
    int n=5;
    int arr[5]={1,2,3,4,5};
    
    binarysearch(arr,n,8);

    return 0;
}
